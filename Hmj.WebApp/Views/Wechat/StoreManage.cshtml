            deleteUrl: "@Url.Action("DeleteStore")",
            listUrl: "@Url.Action("StoreList")",
        };
    </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "plugins/validator/validator", "app/wechat/storemanage", "app/company/jquery.tree")
}
